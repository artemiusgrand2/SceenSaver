<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <appSettings>
    <!-- Файл, куда помещаются (где хранятся) аутентификационные данные пользователей -->
    <add key="userAuthentDataFilePath" value="d:\Work\С#\Утилита идентификации и аутентификации\Test\1.xml"/>
    
    <!-- Время (в часах), в течение которого, по умолчанию, должен действовать вновь создаваемый аккаунт пользователя (а точнее, его пароль).
    7 дней * 24 часа = 168 часов -->
    <add key="userPasswordDefLifeTime" value="168"/>
  </appSettings>
</configuration>