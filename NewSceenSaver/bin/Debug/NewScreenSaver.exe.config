<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <appSettings>
    <!-- Файл, где хранятся аутентификационные данные пользователей -->
    <add key="userAuthentDataFilePath" value=".\reg.xml"/>
    <!-- Файл логов программы -->
    <add key="logFilePath" value="d:\1.log"/>
    <!-- скорость работы с COM портом -->
    <add key="baudRate" value="38400"/>
    <!-- адрес вторго экрана для блокировки -->
    <add key="otherscreen" value="10.20.47.237:2003"/>
    <!-- порт чтения -->
    <add key="listenPort" value="2002"/>
    <!-- Максимальный размер файла логов программы -->
    <add key="maxLogFileSizeInBytes" value="240000"/>
    <!-- Период аутентификации пользователя (в мсек) -->
    <add key="authInterval" value="10000"/>
    <!-- Максимальное количество попыток (подряд) для пользователя пройти процедуру аутентификации -->
    <add key="maxAuthAttemp" value="3"/>
    <!-- Время (в часах), в течение которого, по умолчанию, должен действовать вновь создаваемый аккаунт пользователя (а точнее, его пароль).
    7 дней * 24 часа = 168 часов -->
    <add key="userPasswordDefLifeTime" value="720"/>
    <!-- Контролировать нахождение карточки -->
    <add key="cardOn" value="true"/>
     <!-- Вид считывателя -->
     <add key="viewReader" value="smartCard"/>
  </appSettings>
<startup><supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/></startup></configuration>
